    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Study",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/study.py",
            "console": "integratedTerminal"
        },
        {
            "name": "GDB Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${config:python.pythonPath}",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        }
    ]
}